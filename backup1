  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 40px;
      font-family: sans-serif;
      background: #f2f2f2;
      text-align: center;
    }

    h2 {
      margin-bottom: 40px;
    }

    .card-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      transition: all 0.3s ease;
      flex-wrap: wrap;
    }

    .card {
      width: 160px;
      height: 240px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: all 0.4s ease;
      position: relative;
      cursor: pointer;
      flex-shrink: 0;
      transform: scale(1);
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .card-content {
      padding: 10px;
    }

    .card-title {
      font-weight: bold;
      font-size: 14px;
    }

    .card-price {
      font-size: 13px;
      color: #777;
    }

    .card.active {
      transform: scale(1.3);
      z-index: 10;
    }

    .card-container:hover .card:not(.active) {
      opacity: 0.6;
      transform: scale(0.9);
    }

    .card-rating {
      font-size: 12px;
      color: #ffcc00;
    }

    @media (max-width: 768px) {
      .card.active {
        transform: scale(1.1);
      }

      .card-container:hover .card:not(.active) {
        transform: scale(0.95);
      }
    }
  </style>
</head>
